<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Motorcycle.AddMotorcycleFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/action_bar_style"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ic_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:text="@string/Motor"
                android:textSize="30dp"
                android:textColor="@color/white" />
        </RelativeLayout>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/nav"/>
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="240dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="175dp"
            android:background="@drawable/camera"
            android:id="@+id/camera">

        </ImageButton>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/categories_box_style">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/profile_box_style">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nameLayout"
                android:layout_width="450dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/image_style"
                    android:hint="@string/Merk"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addressLayout"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="15dp"
                android:layout_width="550dp"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:layout_gravity="center_vertical">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/image_style"
                    android:hint="@string/Jenis"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneNumberLayout"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="15dp"
                android:layout_width="450dp"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:layout_gravity="top|right">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/image_style"
                    android:hint="@string/Kondisi"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/citizenLayout"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="15dp"
                android:layout_width="450dp"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:layout_gravity="top|right">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputCitizen"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/image_style"
                    android:hint="@string/Tahun"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/motorLayout"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="15dp"
                android:layout_width="450dp"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:layout_gravity="top|right">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputMotor"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/image_style"
                    android:hint="@string/Harga"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/profile_box_style"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="250dp"
        android:text="Submit"
        android:textColor="@color/white"
        />
</RelativeLayout>